{
  "ci": {
    "assert": {
      "assertions": {
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:best-practices": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "categories:performance": [
          "warn",
          {
            "minScore": 0.8
          }
        ],
        "categories:seo": [
          "warn",
          {
            "minScore": 0.8
          }
        ]
      }
    },
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "bunx serve dist -l 8080",
      "startServerReadyPattern": "Accepting connections",
      "url": [
        "http://localhost:8080"
      ]
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
